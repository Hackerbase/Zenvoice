<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center" style="margin: 30px 0px 50px">
      </div>
      <div class="auth">
        <div class="tab-pane" id="login">
          <%= render "devise/sessions/new" %>
        </div>
        <div class="tab-pane hide" id="signup">
          <%= render "devise/registrations/new" %>
        </div>
        <div style="margin-top: 30px">
          <div class="signup-title">
            Create a new account ?  <button id="signup-toggle" class="btn btn-inverse">Create Account</button>
          </div>
          <div class="login-title hide">
            Already had an account ? <button id="login-toggle" class="btn btn-inverse">Login</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
